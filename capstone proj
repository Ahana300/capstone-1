# PREDICTION PAGE
elif page == "ğŸ“Š Prediction":
    st.title("ğŸ§  AI Health Prediction")

    st.markdown("### Please fill in your details below:")
    with st.form("health_form"):
        col1, col2 = st.columns(2)

        with col1:
            age = st.number_input("Age", min_value=1, max_value=120, value=25)
            gender = st.selectbox("Gender", ["Male", "Female", "Other"])
            bmi = st.slider("BMI", 10.0, 50.0, 22.0)
            blood_pressure = st.slider("Blood Pressure", 60, 180, 120)

        with col2:
            glucose = st.number_input("Glucose Level (mg/dL)", 50, 300, 90)
            cholesterol = st.number_input("Cholesterol Level (mg/dL)", 100, 350, 200)
            smoking = st.selectbox("Do you smoke?", ["No", "Yes"])
            exercise = st.selectbox("Do you exercise regularly?", ["Yes", "No"])

        submitted = st.form_submit_button("ğŸ” Predict Health Status")

    if submitted:
        with st.spinner("Analyzing your health data... Please wait â³"):
            time.sleep(2)  # simulate model computation
            # ---------------------------
           
            # Example:
            # prediction = model.predict([[age, bmi, glucose, cholesterol, ...]])
            # For now, simulate result
            import random
            health_score = random.uniform(0, 1)
            # ---------------------------

        st.markdown("### ğŸ©º Prediction Result")
        if health_score > 0.5:
            st.success("âœ… You are likely Healthy based on your data.")
            st.progress(int(health_score * 100))
            st.balloons()
        else:
            st.error("âš ï¸ You may be at Risk â€” please consult a medical professional.")
            st.progress(int(health_score * 100))

        with st.expander("ğŸ“ˆ Health Recommendation"):
            if health_score > 0.5:
                st.markdown("""
                - Maintain a balanced diet ğŸ¥—  
                - Keep up your exercise routine ğŸƒâ€â™€ï¸  
                - Stay hydrated ğŸ’§  
                - Continue regular checkups ğŸ©º
                """)
            else:
                st.markdown("""
                - Reduce sugar and salt intake ğŸ§‚  
                - Exercise at least 30 mins a day ğŸš¶â€â™€ï¸  
                - Get enough sleep ğŸ˜´  
                - Consult your doctor for personalized advice ğŸ‘¨â€âš•ï¸
                """)


